{% extends "layout.twig" %}

{% block title %}${ "Manage Groups" | translate }{% endblock %}

{% block content %}
			<h1>${ "Manage Groups" | translate }</h1>
			{% if updated %}
			<p class="message yay">${ "Group updated." | translate }</p>
			{% endif %}
			{% if deleted %}
			<p class="message yay">${ "Group deleted." | translate }</p>
			{% endif %}
			{% if added %}
			<p class="message yay">${ "Group added." | translate }</p>
			{% endif %}
			<h2>${ "Need more detail?" | translate }</h2>
			<form class="detail" action="index.php" method="get" accept-charset="utf-8">
				<fieldset>
					<input type="hidden" name="action" value="manage_groups" />
					{% if visitor.group.can("add_group") %}
					<a href="{% admin "new_group" %}" class="button yay right">
						<img src="images/icons/add.png" alt="add" /> ${ "New Group" | translate }
					</a>
					{% endif %}
					<div class="pad">
						<h3>${ "Search all groups for user&hellip;" | translate }</h3>
						<input class="text" type="text" name="search" value="${ GET.search | escape }" id="search" /> <button type="submit" class="inline">${ "Search &rarr;" | translate }</button>
					</div>
				</fieldset>
			</form>
			<br />
			<h2>${ "Groups" | translate }</h2>
			{% for group in groups.paginated %}
			<div class="box">
				<h1>
					<span class="right">
						${ group.edit_link('<img src="images/icons/edit.png" alt="edit" /> '~("edit" | translate)) }
						${ group.delete_link('<img src="images/icons/delete.png" alt="delete" /> '~("delete" | translate)) }
					</span>
					{% if group.id == site.guest_group %}
					${ "&#8220;%s&#8221; is the group for guests." | translate | format(group.name) }
					{% elseif group.id == site.default_group %}
					${ "&#8220;%s&#8221; is the default group and has %s member." | translate_plural("&#8220;%s&#8221; is the default group and has %s members.", group.size) | format(group.name, group.size) }
					{% else %}
					${ "&#8220;%s&#8221; has %s member." | translate_plural("&#8220;%s&#8221; has %s members.", group.size) | format(group.name, group.size) }
					{% endif %}
				</h1>
			</div>
			{% endfor %}
			$groups.next_link
			$groups.prev_link
{% endblock %}
