{% extends "layout.twig" %}

{% block title %}${ "Edit Group &#8220;%s&#8221;" | translate | format(group.name | escape) }{% endblock %}

{% block subnav %}{% include "partials/manage_nav.twig" %}{% endblock %}

{% block content %}
			<h1>${ "Editing Group &#8220;%s&#8221;" | translate | format(group.name | escape) }</h1>
			<form id="group_edit" class="split" action="{% admin "update_group" %}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
				<p>
					<label for="name">${ "Name" | translate }</label>
					<input class="text" type="text" name="name" value="${ group.name | escape }" id="name" />
				</p>

				<h2>Permissions</h2>
				<p id="toggler">

				</p>
				<hr />
				{% for permission in permissions %}
				<p>
					<label for="permission_$permission.name">${ permission.name | camelize(true) }</label>
					<input class="checkbox" type="checkbox" name="permissions[$permission.name]" id="permission_$permission.name"{% if group.can(permission.name) %} checked="checked"{% endif %} />
				</p>
				{% endfor %}
				<br />
				<p>
					<label for="done"></label>
					<button type="submit" class="yay"><img src="images/icons/success.png" alt="success" />${ "Update" | translate }</button>
				</p>

				<input type="hidden" name="id" value="$group.id" id="id" />
				<input type="hidden" name="hash" value="$site.secure_hashkey" id="hash" />
			</form>
{% endblock %}
