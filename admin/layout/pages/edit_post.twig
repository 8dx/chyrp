{% extends "layout.twig" %}

{% block title %}${ "Edit &#8220;%s&#8221;" | translate | format(post.title | escape) }{% endblock %}

{% block subnav %}
			<li><a href="{% admin "manage_posts" %}">${ "Posts" | translate }</a></li>
			<li><a href="{% admin "manage_pages" %}">${ "Pages" | translate }</a></li>
			{% trigger "manage_nav" %}
{% endblock %}

{% block content %}
			<h1>${ "Edit &#8220;%s&#8221;" | translate | format(post.title | escape) }</h1>
			<form action="{% admin "update_post" %}" method="post" accept-charset="utf-8">
				{% for field in feather.fields %}
				<p>
					<label for="$field.attr">
						$field.label
						{% if field.optional %}<span class="sub">${ "(optional)" | translate }</span>{% endif %}
						{% if field.help %}
						<span class="sub">
							<a href="{% admin "help&feather="~feather~"&field="~field.attr %}" target="_blank" class="help emblem"><img src="images/icons/help.png" alt="help" /></a>
						</span>
						{% endif %}
					</label>
					{% if field.type == "text" or field.type == "file" %}
					<input class="$field.type{% for class in field.classes %} $class{% endfor %}" type="$field.type" name="$field.attr" value="${ post[field.attr] | escape }" id="$field.attr" />
					{% endif %}
					{% if field.type == "text_block" %}
					<textarea class="wide{% for class in field.classes %} $class{% endfor %}" rows="${ field.rows | fallback(12) }" name="$field.attr" id="$field.attr">${ post[field.attr] | escape }</textarea>
					{% endif %}
				</p>
				{% endfor %}

				<br id="after_options" />
				<button type="submit" class="yay right" accesskey="s">
					<img src="images/icons/success.png" alt="success" />${ "Save" | translate }
				</button>
				<button>
					${ "Preview" | translate }
				</button>

				<div class="clear" />
				<br class="js_disabled" />
				<div id="more_options" class="more_options js_disabled">
					{% if visitor.can.add_post %}
					<p>
						<label for="status">${ "Status" | translate }</label>
						<select name="status" id="status">
							<option value="public"{% if post.status == "public" %} selected="selected"{% endif %}>${ "Public" | translate }</option>
							<option value="private"{% if post.status == "private" %} selected="selected"{% endif %}>${ "Private" | translate }</option>
							<option value="registered_only"{% if post.status == "registered_only" %} selected="selected"{% endif %}>${ "Registered Only" | translate }</option>
						</select>
					</p>
					{% endif %}
					<p>
						<label for="pinned">${ "Pinned?" | translate }</label>
						<input type="checkbox" name="pinned" id="pinned"{% if post.pinned %} checked="checked"{% endif %}/> <small>${ "(shows this post above all others)" | translate }</small>
					</p>
					<p>
						<label for="slug">${ "Slug" | translate }</label>
						<input class="text" type="text" name="slug" value="${ post.slug | escape }" id="slug" />
					</p>
					<p>
						<label for="created_at">${ "Timestamp" | translate }</label>
						<input class="text" type="text" name="created_at" value="${ post.created_at | date }" id="created_at" />
						<input type="hidden" name="original_time" value="${ post.created_at | date }" />
					</p>
					${ "edit_post_options" | trigger(post) }
					<div class="clear"></div>
				</div>

				<input type="hidden" name="feather" value="${ post.feather | escape }" id="feather" />
				<input type="hidden" name="hash" value="$site.secure_hashkey" id="feather" />
			</form>
{% endblock %}
