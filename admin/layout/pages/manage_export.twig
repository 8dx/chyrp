{% extends "layout.twig" %}

{% block title %}${ "Export" | translate }{% endblock %}

{% block content %}
			<h1>${ "Export" | translate }</h1>
			<h2>${ "What would you like to export?" | translate }</h2>
			<form id="export_form" class="split" action="{% admin "export" %}" target="_blank" method="post" accept-charset="utf-8" enctype="multipart/form-data">
				<p>
					<label for="posts">${ "Posts" | translate }</label>
					<input class="checkbox" type="checkbox" name="posts" value="" id="posts" checked="checked" />
					<small>
						filter:
						<input class="text" type="text" name="filter_posts" value="" id="filter_posts" /> (optional)
					</small>
				</p>
				<p>
					<label for="pages">${ "Pages" | translate }</label>
					<input class="checkbox" type="checkbox" name="pages" value="" id="pages" checked="checked" />
					<small>
						filter:
						<input class="text" type="text" name="filter_pages" value="" id="filter_pages" /> (optional)
					</small>
				</p>

				{% trigger "export_choose" %}

				<p class="buttons">
					<button type="submit" class="yay"><img src="images/icons/success.png" alt="success" />${ "Export" | translate }</button>
					<input type="hidden" name="hash" value="$site.secure_hashkey" id="hash" />
				</p>

			</form>
{% endblock %}
