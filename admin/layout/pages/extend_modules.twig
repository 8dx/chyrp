{% extends "layout.twig" %}

{% block title %}${ "Modules" | translate }{% endblock %}

{% block content %}
			<h1>${ "Modules" | translate }</h1>
			<div class="enable module left">
				<h2>${ "Enabled" | translate }</h2>
				<ul class="extend">
{% for safename, module in enabled_modules | items %}
					<li class="$safename">
						<a class="$safename info_link" href="javascript:void(0)"><img src="images/icons/info.png" class="info right" /></a>
						<a href="$module.url">$module.name</a> <span class="sub">by $module.author.link</span>
						<div class="expand">
							<div class="description">
								$module.description
							</div>
							<a class="enable_button js_disabled" href="{% admin "disable&module="~safename %}">Disable</a>
						</div>
					</li>
{% endfor %}
				</ul>
			</div>
			<div class="disable module right">
				<h2>${ "Disabled" | translate }</h2>
				<ul class="extend">
{% for safename, module in disabled_modules | items %}
					<li class="$safename">
						<a class="$safename info_link" href="javascript:void(0)"><img src="images/icons/info.png" class="info right" /></a>
						<a href="$module.url">$module.name</a> <span class="sub">by $module.author.link</span>
						<div class="expand">
							<div class="description">
								$module.description
							</div>
							<a class="disable_button js_disabled" href="{% admin "enable&module="~safename %}">Enable</a>
						</div>
					</li>
{% endfor %}
				</ul>
			</div>
			<div class="clear"></div>
			<br />
			<button class="right">Get More Modules &rsaquo;</button>
{% endblock %}
