{% extends "layout.twig" %}

{% block title %}${ "Comment Settings" | translate("comments") }{% endblock %}

{% block content %}
			<h1>${ "Comment Settings" | translate("comments") }</h1>
			{% if updated %}
			<p class="message yay">${ "Settings updated." | translate }</p>
			{% endif %}
			{% if invalid_defensio %}
			<p class="message boo">${ "Invalid Defensio API key." | translate("comments") }</p>
			{% endif %}
			<form id="comment_settings" class="split" action="{% admin "comment_settings" %}" method="post">
				<fieldset>
					<p>
						<label for="defensio_api_key">${ "Defensio API Key" | translate("comments") }</label>
						<input class="text" type="text" name="defensio_api_key" value="${ site.defensio_api_key | escape }" id="defensio_api_key" /> <span class="sub">${ "(recommended)" | translate }</span>
						<small>${ "A very good spam blocker. Get an API key from <a href=\"http://defensio.com/\">Defensio.com</a>." | translate("comments") }</small>
					</p>
					<p>
						<label for="allowed_comment_html">${ "Allowed HTML Tags" | translate("comments") }</label>
						<input class="text code" type="text" name="allowed_comment_html" value="${ site.allowed_comment_html | join(", ") | escape }" id="allowed_comment_html" />
						<small>${ "Format: <code>strong, blockquote, em</code>" | translate("comments") }</small>
					</p>
					<p>
						<label for="default_comment_status">${ "Default Comment Status" | translate("comments") }</label>
						<select name="default_comment_status">
							<option value="approved">${ "Approved" | translate("comments") }</option>
							<option value="denied">${ "Denied" | translate("comments") }</option>
						</select>
					</p>
					<p>
						<label for="comments_per_page">${ "Comments Per Page" | translate("comments") }</label>
						<input class="text nowidth" type="text" name="comments_per_page" value="${ site.comments_per_page | escape }" size="2" id="comments_per_page" />
					</p>
					<p>
						<label for="auto_reload_comments">${ "Reload Comments Every %s Seconds" | translate("comments") | format("<input class=\"text nowidth\" type=\"text\" name=\"auto_reload_comments\" value=\"" ~ site.auto_reload_comments | escape ~ "\" size=\"2\" id=\"auto_reload_comments\" />") }</label>
						
						 <input type="checkbox" class="checkbox" name="enable_reload_comments"${ site.enable_reload_comments | checked } /> ${ "enabled" | translate }
					</p>

					<p class="buttons">
						<button type="submit" class="yay"><img src="images/icons/success.png" alt="success" />${ "Update" | translate }</button>
					</p>

					<input type="hidden" name="hash" value="$site.secure_hashkey" id="hash" />
				</fieldset>
			</form>
{% endblock %}