<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head profile="http://gmpg.org/xfn/11">
		<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
		<title>{% block title %}$site.name{% if title %} &raquo; $title{% endif %}{% endblock %}</title>
		<meta name="generator" content="Chyrp" />
		<link rel="pingback" href="$site.file_url/includes/xmlrpc.php" />
		<link rel="EditURI" type="application/rsd+xml" href="$site.file_url/includes/rsd.php" />
		$feeds
		$stylesheets
		$javascripts
{% trigger "head" %}
	</head>
	<body>
{% if visitor.group.can("add_post") or visitor.group.can("add_draft") or visitor.group.can("add_page") or visitor.group.can("view_draft") or visitor.group.can("change_settings") %}
		<div class="controls" id="admin_bar"{% if hide_admin %} style="display: none"{% endif %}>
			<ul>
{% if visitor.group.can("add_post") %}
				<li><a id="add_post" href="{% admin "write_post" %}">${ "Write" | translate }</a></li>
{% elseif visitor.group.can("add_draft") %}
				<li><a id="add_draft" href="{% admin "write_post" %}">${ "Write Draft" | translate }</a></li>
{% endif %}
{% if visitor.group.can("add_page") %}
				<li><a id="add_page" href="{% admin "write_page" %}">${ "Add Page" | translate }</a></li>
{% endif %}
{% if visitor.group.can("view_draft") %}
				<li><a id="your_drafts" href="{% url "drafts/" %}">${ "Your Drafts" | translate }</a></li>
{% endif %}
{% if visitor.group.can("change_settings") %}
				<li><a id="site_settings" href="$site.file_url/admin/">${ "Admin" | translate }</a></li>
{% endif %}
				<li class="close"><a class="toggle_admin" href="{% url "toggle_admin/" %}">${ "Close" | translate }</a></li>
			</ul>
		</div>
{% endif %}
		<div class="wrapper">
			<div class="container">
				<div class="header">
					<h1><a href="$site.url">$site.name</a> <span>$site.description</span></h1>
				</div>
				<div id="posts">
{% block content %}{% endblock %}
				</div>
				$pagination.next_link
				$pagination.prev_link
				<br />
				<div class="footer">
					<p><a href="{% url "feed/" %}">Feed</a> / theme &copy; <a href="http://lofisoami.com/">Aaron MacDonald</a> 2007</p>
					<span>${ "Powered by <a href=\"http://chyrp.net/\">Chyrp</a>" | translate }</span>
				</div>
		    </div>
		    <div class="sidebar">
				<form action="{% url "search/" %}" method="get" accept-charset="utf-8">
					<input type="hidden" name="action" value="search" id="action" />
					<input type="text" id="search" name="query" />
				</form>
				<h1>${ "Pages" | translate }</h1>
$page_list
				<h1>${ "Welcome, %s!" | translate | format(visitor.login | fallback("Guest" | translate)) }</h1>
				<ul>
{% if visitor.logged_in %}
					<li><a href="{% url "controls/" %}">${ "User Controls" | translate }</a></li>
{% if visitor.group.can("add_post") or visitor.group.can("add_page") or visitor.group.can("view_draft") or visitor.group.can("change_settings") %}
					<li><a class="toggle_admin" href="{% url "toggle_admin/" %}">${ "Toggle Admin Bar" | translate }</a></li>
{% endif %}
					<li><a href="{% url "logout/" %}">${ "Log Out" | translate }</a></li>
{% else %}
					<li><a href="{% url "login/" %}">${ "Log In" | translate }</a></li>
{% if site.can_register %}
					<li><a href="{% url "register/" %}">${ "Register" | translate }</a></li>
					<li><a href="{% url "lost_password/" %}">${ "Lost Password?" | translate }</a></li>
{% endif %}
{% endif %}
				</ul>
{% trigger "sidebar" %}
{% if tags %}
				<h1>${ "Tags" | translate }</h1>
				<ul id="tags_list">
{% for tag in tags %}
					<li><a href="{% url "tag/" ~ tag.url ~ "/" %}">$tag.name</a> <span class="sub">($tag.popularity)</span></li>
{% endfor %}
					<li><a href="{% url "tags/" %}">${ "All &rarr;" | translate }</a></li>
				</ul>
{% endif %}
{% if archive_list %}
				<h1>${ "Archives" | translate }</h1>
				<ul>
{% for archive in archive_list %}
					<li><a href="$archive.url">${ archive.when | date("F Y") }</a> <span class="sub">($archive.count)</span></li>
{% endfor %}
				</ul>
{% endif %}
				<h1>${ "Stats" | translate }</h1>
				<ul>
					<li>${ "Queries:" | translate } $stats.queries</li>
					<li>${ "Load time:" | translate } $stats.load</li>
				</ul>
			</div>
		</div>
{% trigger "end_content" %}
		<script type="text/javascript">
{% for query in sql_debug %}
			console.log('${ query.number }. $query.file[$query.line]: ${ query.query | quotes}')
{% endfor %}
		</script>
	</body>
</html>